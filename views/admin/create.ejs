<!DOCTYPE html>
<html lang="en">

<%- include('../common/head'); -%>
<body>
    <%- include('../common/header'); -%>
    <div class="pt-5 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form method="POST" action="/post/store">
                        <div class="form-group">
                            <label for="input-title">Title</label>
                            <input type="text" name="title" class="form-control" id="input-title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="input-title">Image</label>
                            <input type="text" name="image" class="form-control" id="input-title" placeholder="Image url (hơi cùi :v)">
                        </div>
                        <div class="form-group">
                            <label for="input-desc">Description</label>
                            <textarea rows="4" name="description" class="form-control" id="input-desc" placeholder="Description"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Add Blog</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../common/footer'); -%>
    <%- include('../common/script'); -%>

</body>

</html>